  <h1 style="text-align: center; margin-top: 20px;">Assign Routes</h1>

  <% if (messages.success_msg) { %>
    <div class="flash-success">
      <% messages.success_msg.forEach(msg => { %><p><%= msg %></p><% }) %>
    </div>
  <% } %>

  <% if (messages.error_msg) { %>
    <div class="flash-error">
      <% messages.error_msg.forEach(msg => { %><p><%= msg %></p><% }) %>
    </div>
  <% } %>
  <form method="GET" action="/assign-routes" style="display: flex; justify-content: center; gap: 15px; flex-wrap: wrap; margin-top: 30px;">
    <select name="view">
      <option value="own" <%= viewAll ? '' : 'selected' %>>My Assignments</option>
      <option value="all" <%= viewAll ? 'selected' : '' %>>All Assignments</option>
    </select>
    <button type="submit" style="background-color: #5A8DEE; color: white; border: none; padding: 10px 16px; border-radius: 5px;">Filter</button>
  </form>
  
  <!-- Existing Assignments -->
  <table class="route-table">
    <thead>
      <tr>
        <th>Bus ID</th>
        <th>Driver</th>
        <th>Conductor</th>
        <th>Route</th>
        <th>Departure Time</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% assignments.forEach(row => { %>
        <tr>
          <td><%= row.bus_id %></td>
          <td><%= row.driver_name %></td>
          <td><%= row.conductor_name %></td>
          <td><%= row.from_loc %> â†’ <%= row.to_loc %></td>
          <td><%= new Date(row.departure_time).toLocaleString('en-IN', {
            day: '2-digit', month: 'short', year: 'numeric',
            hour: '2-digit', minute: '2-digit',
            hour12: true
          }) %></td>
          
          <td>
            <form action="/release-assignment/<%= row.assign_id %>" method="POST" onsubmit="return confirm('Release this assignment?');">
              <button type="submit" style="background-color: #dc3545; color: white; padding: 6px 12px; border: none; border-radius: 4px;">Release</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
  

  <!-- Assignment Form -->
  <form class="add-route-form" action="/assign-routes" method="POST" onsubmit="return validateDateTime()">
    <h3 style="text-align: center;">Assign New Route</h3>
  
    <label for="bus_id">Select Bus</label>
    <select name="bus_id" required>
      <% buses.forEach(bus => { %>
        <option value="<%= bus.bus_id %>">Bus <%= bus.bus_id %> - Capacity: <%= bus.capacity %></option>
      <% }) %>
    </select>
  
    <label for="driver_id">Select Driver</label>
    <select name="driver_id" required>
      <% drivers.forEach(emp => { %>
        <option value="<%= emp.emp_id %>"><%= emp.name %></option>
      <% }) %>
    </select>
  
    <label for="conductor_id">Select Conductor</label>
    <select name="conductor_id" required>
      <% conductors.forEach(emp => { %>
        <option value="<%= emp.emp_id %>"><%= emp.name %></option>
      <% }) %>
    </select>
  
    <label for="route_id">Select Route</label>
    <select name="route_id" required>
      <% routes.forEach(route => { %>
        <option value="<%= route.route_id %>"><%= route.from_loc %> â†’ <%= route.to_loc %></option>
      <% }) %>
    </select>
  
    <label for="departure_time">Departure Date & Time</label>
<input type="datetime-local" name="departure_time" id="departure_time" required>


  
    <button type="submit">Assign Route</button>
  </form>
  
</body>
<script>
    function pad(n) {
      return n < 10 ? '0' + n : n;
    }
  
    function setMinDateTime() {
      const input = document.getElementById('departure_time');
      const now = new Date();
  
      const year = now.getFullYear();
      const month = pad(now.getMonth() + 1);
      const day = pad(now.getDate());
      const hour = pad(now.getHours());
      const minute = pad(now.getMinutes());
  
      const formatted = `${year}-${month}-${day}T${hour}:${minute}`;
      input.min = formatted;
    }
  
    function validateDateTime() {
      const datetimeInput = document.getElementById('departure_time');
      const selected = new Date(datetimeInput.value);
      const now = new Date();
  
      if (!datetimeInput.value) {
        alert("Please select a departure date and time.");
        return false;
      }
  
      if (selected.getTime() <= now.getTime()) {
        alert("Departure time must be in the future.");
        return false;
      }
  
      return true;
    }
  
    window.addEventListener('DOMContentLoaded', setMinDateTime);
  </script>
  

